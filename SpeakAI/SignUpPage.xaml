<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             x:Class="SpeakAI.SignUpPage">
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="25">
                <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="Create Your Account"
                           FontFamily="InterBold"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="#0A1A3A"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="15" Padding="10, 0">
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="#F8F8F8">
                        <Entry x:Name="Username"
                               Placeholder="Username" 
                               Text="{Binding Username}"
                               FontSize="16"
                               PlaceholderColor="Gray"/>
                    </Frame>
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="#F8F8F8">
                        <Entry x:Name="Email" Placeholder="Email" Text="{Binding Email}"
                               Keyboard="Email" FontSize="16" PlaceholderColor="Gray"/>
                    </Frame>
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="#F8F8F8">
                        <Entry x:Name="FullName" Placeholder="Full Name" Text="{Binding FullName}"
                               FontSize="16" PlaceholderColor="Gray"/>
                    </Frame>
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="#F8F8F8">
                        <DatePicker x:Name="Birthday" Date="{Binding Birthday}" FontSize="16"/>
                    </Frame>
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="#F8F8F8">
                        <Picker x:Name="Gender" Title="Select Gender" SelectedItem="{Binding Gender}" FontSize="16">
                            <Picker.Items>
                                <x:String>Male</x:String>
                                <x:String>Female</x:String>
                                <x:String>Other</x:String>
                            </Picker.Items>
                        </Picker>
                    </Frame>

                    <Frame CornerRadius="10" Padding="10" BackgroundColor="#F8F8F8">
                        <Entry x:Name="Password" Placeholder="Password" Text="{Binding Password}"
                               IsPassword="True" FontSize="16" PlaceholderColor="Gray"/>
                    </Frame>

                    <Frame CornerRadius="10" Padding="10" BackgroundColor="#F8F8F8">
                        <Entry x:Name="ConfirmPassword" Placeholder="Confirm Password" Text="{Binding ConfirmPassword}"
                               IsPassword="True" FontSize="16" PlaceholderColor="Gray"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Notification Message -->
                <Label Text="{Binding NotificationMessage}"
                       TextColor="Red"
                       FontSize="14"
                       HorizontalOptions="Center"
                       IsVisible="{Binding IsNotificationVisible}"/>

                <!-- Sign Up Button -->
                <Button Text="SIGN UP"
                        FontSize="18"
                        BackgroundColor="Blue"
                        FontFamily="InterBold"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        IsEnabled="{Binding IsNotProcessing}"
                        Command="{Binding SignUpCommand}"/>

                <!-- Sign In Navigation -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="Already have an account?"
                           FontSize="14" TextColor="Black"/>
                    <Label Text="SIGN IN"
                           FontFamily="InterBold" TextColor="Blue" FontSize="14">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SignInCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
