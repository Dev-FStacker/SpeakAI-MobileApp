<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SpeakAI.MainPage"
    BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <HorizontalStackLayout VerticalOptions="Start">
                <Label Text="Hi, Maya👋" FontSize="24" FontAttributes="Bold" FontFamily="InterBold" TextColor="Black" />
                <Image Source="chat_icon.png" HeightRequest="30" HorizontalOptions="EndAndExpand" />
            </HorizontalStackLayout>
            <Label Text="Let's start learning!" FontSize="18" FontFamily="InterBold" TextColor="Black"/>

            <Frame BackgroundColor="White" CornerRadius="12" Padding="15" HasShadow="True">
                <VerticalStackLayout>
                    <Label Text="How many hours you studied this week" FontFamily="Inter" FontSize="16" TextColor="Black" />
                    <ProgressBar Progress="0.5" HeightRequest="20"/>
                    <Button Text="Let's start" BackgroundColor="Blue" FontFamily="Inter" TextColor="White" CornerRadius="8"/>
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="Orange" CornerRadius="10" Padding="10">
                <Label Text="Get 50% off SpeakUp Premium and unlock new languages!" FontFamily="Inter" TextColor="White"/>
            </Frame>

            <Grid ColumnDefinitions="*, Auto">
                <Label Text="Courses" FontSize="18" TextColor="Black" FontFamily="InterBold" Grid.Column="0"/>
                <Button Text="See all →" BackgroundColor="Transparent"
                        FontFamily="Inter" TextColor="Blue" Grid.Column="1"/>
            </Grid>

            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="10" Padding="10">
                  
                    <Frame CornerRadius="30" WidthRequest="100" HeightRequest="150" BackgroundColor="LightGray" Padding="5" HasShadow="True">
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Image Source="travel.png" WidthRequest="80" HeightRequest="80"/>
                            <Label Text="Travel" FontSize="12" HorizontalOptions="Center" TextColor="Black" FontFamily="Inter"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="30" WidthRequest="100" HeightRequest="150" BackgroundColor="LightGray" Padding="5" HasShadow="True">
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Image Source="practice.png" WidthRequest="80" HeightRequest="80"/>
                            <Label Text="Practice" FontSize="12" HorizontalOptions="Center" TextColor="Black" FontFamily="Inter"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="30" WidthRequest="100" HeightRequest="150" BackgroundColor="LightGray" Padding="5" HasShadow="True">
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Image Source="business.png" WidthRequest="80" HeightRequest="80"/>
                            <Label Text="Business" FontSize="12" HorizontalOptions="Center" TextColor="Black" FontFamily="Inter"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="30" WidthRequest="100" HeightRequest="150" BackgroundColor="LightGray" Padding="5" HasShadow="True">
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Image Source="academic.png" WidthRequest="80" HeightRequest="80"/>
                            <Label Text="Academic" FontSize="12" HorizontalOptions="Center" TextColor="Black" FontFamily="Inter"/>
                        </VerticalStackLayout>
                    </Frame>

                </HorizontalStackLayout>
            </ScrollView>


            <VerticalStackLayout Spacing="10">
                <Label Text="User Experience Video" FontSize="18" TextColor="Black" FontFamily="InterBold"/>
                <Frame BackgroundColor="Transparent" CornerRadius="10" Padding="0" HasShadow="False">
                    <Grid>
                        <Image Source="practice.png" HeightRequest="180" Aspect="AspectFill"/>
                        <Image Source="play_icon.png" WidthRequest="50" HeightRequest="50" 
                   HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Grid>
                </Frame>
                <HorizontalStackLayout Spacing="10">
                    <Image Source="profile_icon.png" WidthRequest="40" HeightRequest="40" />
                    <VerticalStackLayout>
                        <Label Text="Amanda Roch - User Experience Insights" TextColor="Black" FontFamily="Inter"
                   FontSize="16" FontAttributes="Bold"/>
                        <Label Text="1.2M views · 2 days ago" FontSize="14" TextColor="Gray"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>


            <!-- Recent Learning Section with Horizontal Scrolling -->
            <Grid ColumnDefinitions="*, Auto">
                <Label Text="Recent learning" FontSize="18" TextColor="Black" FontFamily="InterBold" FontAttributes="Bold" Grid.Column="0"/>
                <Button Text="See all →" BackgroundColor="Transparent" 
            FontFamily="Inter" TextColor="Blue" Grid.Column="1"/>
            </Grid>
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="15">
                    <Frame CornerRadius="10" WidthRequest="150">
                        <VerticalStackLayout>
                            <Image Source="business.png" HeightRequest="100"/>
                            <Label Text="Tourist trip" FontSize="16" HorizontalOptions="Center" TextColor="Black" FontFamily="Inter"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame CornerRadius="10" WidthRequest="150">
                        <VerticalStackLayout>
                            <Image Source="academic.png" HeightRequest="100"/>
                            <Label Text="Hang out with friends" FontSize="16" HorizontalOptions="Center" TextColor="Black" FontFamily="Inter"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame CornerRadius="10" WidthRequest="150">
                        <VerticalStackLayout>
                            <Image Source="practice.png" HeightRequest="100"/>
                            <Label Text="Business English" FontSize="16" HorizontalOptions="Center" TextColor="Black" FontFamily="Inter"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame CornerRadius="10" WidthRequest="150">
                        <VerticalStackLayout>
                            <Image Source="travel.png" HeightRequest="100"/>
                            <Label Text="Daily Conversations" FontSize="16" HorizontalOptions="Center" TextColor="Black" FontFamily="Inter"/>
                        </VerticalStackLayout>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

            <Label Text="Suggested for you" FontSize="18" FontAttributes="Bold" TextColor="Black" FontFamily="InterBold"/>
            <Frame CornerRadius="10">
                <Label Text="How to Conversation" FontSize="16" TextColor="Black" FontFamily="Inter"/>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
