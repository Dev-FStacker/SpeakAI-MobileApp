<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SpeakAI.MainPage"
    BackgroundColor="#F3F4F6">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Top Header Section -->
            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Welcome back, Alex! 👋" FontSize="24" FontAttributes="Bold" TextColor="#1E3A8A"/>
                    <Label Text="Keep improving your English skills!" FontSize="16" TextColor="#6B7280"/>
                </VerticalStackLayout>
                <Image Grid.Column="1" Source="user_icon.png" WidthRequest="50" HeightRequest="50" Margin="10,0,0,0" HorizontalOptions="End"/>
            </Grid>

            <!-- Learning Progress -->
            <Frame BackgroundColor="#E3F2FD" Padding="20" CornerRadius="20" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📊 Your Progress" FontSize="20" FontAttributes="Bold" TextColor="#1E3A8A"/>
                    <Label Text="You have completed 75% of this week's goal!" FontSize="14" TextColor="#6B7280"/>
                    <ProgressBar Progress="0.75" HeightRequest="8" BackgroundColor="#BBDEFB"/>
                    <HorizontalStackLayout Spacing="10">
                        <Button Clicked="OnCounterClicked" Text="Continue Learning" BackgroundColor="#2563EB" TextColor="White" CornerRadius="10" FontAttributes="Bold"/>
                        <Button Text="Set Goal" BackgroundColor="Transparent" TextColor="#2563EB" BorderColor="#2563EB" BorderWidth="2" CornerRadius="10" FontAttributes="Bold"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- AI-Powered Daily Learning -->
            <Frame BackgroundColor="#ECEAFF" Padding="20" CornerRadius="20" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🔥 Word of the Day: 'Meticulous'" FontSize="20" TextColor="#6B21A8" FontAttributes="Bold"/>
                    <Label Text="Meaning: Showing great attention to detail." FontSize="14" TextColor="#6B7280"/>
                    <Label Text="Pronunciation: /məˈtɪkjʊləs/" FontSize="14" TextColor="#6B7280"/>
                    <Button Text="Practice Pronunciation" BackgroundColor="#9333EA" TextColor="White" CornerRadius="10" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Learning Modules -->
            <Label Text="📚 Continue Your Learning" FontSize="22" FontAttributes="Bold" TextColor="#1E3A8A"/>
            <HorizontalStackLayout Spacing="15">
                <Frame BackgroundColor="#D1E7FF" Padding="15" CornerRadius="20" WidthRequest="160" HasShadow="True">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Grammar Basics" FontSize="18" TextColor="#1E3A8A" FontAttributes="Bold"/>
                        <Label Text="Level: A1" FontSize="14" TextColor="#6B7280"/>
                        <Button Text="Start" BackgroundColor="White" TextColor="#2563EB" CornerRadius="10" FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame BackgroundColor="#E1BEE7" Padding="15" CornerRadius="20" WidthRequest="160" HasShadow="True">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Advanced Speaking" FontSize="18" TextColor="#6B21A8" FontAttributes="Bold"/>
                        <Label Text="Level: C1" FontSize="14" TextColor="#6B7280"/>
                        <Button Text="Join" BackgroundColor="White" TextColor="#9333EA" CornerRadius="10" FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>

            <!-- Live Speaking Practice -->
            <Frame BackgroundColor="#F1F8E9" Padding="20" CornerRadius="20" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🎙️ Live Speaking Practice" FontSize="20" FontAttributes="Bold" TextColor="#2563EB"/>
                    <Label Text="Join an AI-powered live conversation session." FontSize="14" TextColor="#6B7280"/>
                    <Button Text="Join Now" BackgroundColor="#66BB6A" TextColor="White" CornerRadius="10" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Study Reminders -->
            <Frame BackgroundColor="#BBDEFB" Padding="20" CornerRadius="20" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="⏰ Smart Study Reminders" FontSize="20" FontAttributes="Bold" TextColor="#1E3A8A"/>
                    <Label Text="You're most active at 8:00 PM. Would you like a reminder?" FontSize="14" TextColor="#6B7280"/>
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Yes" BackgroundColor="#2563EB" TextColor="White" CornerRadius="10" FontAttributes="Bold"/>
                        <Button Text="No" BackgroundColor="Transparent" TextColor="#2563EB" BorderColor="#2563EB" BorderWidth="2" CornerRadius="10" FontAttributes="Bold"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>