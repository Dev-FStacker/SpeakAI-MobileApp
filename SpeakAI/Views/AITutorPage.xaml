<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#F5F5F5"
             x:Class="SpeakAI.Views.AITutorPage">
    <StackLayout Padding="10" Spacing="5">
        <CollectionView x:Name="MessagesListView"
                ItemsSource="{Binding Messages}"
                VerticalOptions="FillAndExpand"
                SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="15"
                   HasShadow="False">
                        <StackLayout Padding="5">
                            <Label Text="{Binding}" FontSize="16" TextColor="Black" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <Grid Padding="5" BackgroundColor="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <Entry x:Name="MessageEntry" Placeholder="Type your message..." FontFamily="Inter"
                   Grid.Column="0" FontSize="16" />

            <Button Text="➤" Clicked="SendMessage_Clicked"
                    Grid.Column="1" FontSize="20" BackgroundColor="Blue"
                    FontFamily="InterBold"
                    TextColor="White" CornerRadius="25" Padding="5"/>
        </Grid>
        <Button Text="Start Listening" Clicked="Listen"
                FontFamily="InterBold"
                BackgroundColor="Blue" TextColor="White"
                CornerRadius="25" x:Name="StartButton"/>
    </StackLayout>
</ContentPage>
