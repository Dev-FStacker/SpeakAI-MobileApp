<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SpeakAI.ViewModels"
             x:Class="SpeakAI.Views.StudyPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Title with modern styling -->
            <Label Text="ðŸ“š My Courses"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <!-- Course List -->
            <CollectionView ItemsSource="{Binding EnrolledCourses}" 
                            SelectionMode="Single"
                            HeightRequest="600">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" Margin="10" CornerRadius="15"
                               HasShadow="True"
                               BackgroundColor="White"
                               BorderColor="#E0E0E0">

                            <!-- Tap Gesture -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCourseTapped"/>
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout Spacing="8">

                                <!-- Course Title -->
                                <Label Text="{Binding CourseName}" 
                                       TextColor="#222" 
                                       FontSize="22" 
                                       FontAttributes="Bold"/>

                                <!-- Progress Bar -->
                                <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                                    <Label Text="Progress:"
                                           FontSize="16"
                                           TextColor="#555"
                                           VerticalOptions="Center"/>
                                    <ProgressBar Grid.Column="1"
                                                 Progress="{Binding ProgressPoints}" 
                                                 HeightRequest="8"
                                                 WidthRequest="150"
                                                 BackgroundColor="#ddd"
                                                 ProgressColor="#4CAF50"
                                                 Margin="10,0,0,0"/>
                                </Grid>

                                <!-- Progress Status -->
                                <Label Text="{Binding ProgressPoints, StringFormat='ðŸŒŸ {0:N1} progress points'}" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>

                                <!-- Timestamp -->
                                <Label Text="{Binding UpdatedAt, StringFormat='ðŸ“… Last updated: {0:MMM dd, yyyy}'}" 
                                       FontSize="14"
                                       TextColor="#777"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
