<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeakAI.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="#F2F6FC">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Fill">
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="True"
                   HorizontalOptions="Fill">
                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Frame BackgroundColor="#E0E7FF"
                           CornerRadius="50"
                           WidthRequest="80"
                           HeightRequest="80"
                           Padding="5"
                           HasShadow="False">
                        <Image Source="profile_icon.png"
                               WidthRequest="70"
                               HeightRequest="70"
                               Aspect="AspectFill"/>
                    </Frame>
                    <VerticalStackLayout>
                        <Label x:Name="NameLabel"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#1E293B"/>
                        <Label x:Name="EmailLabel"
                               FontSize="14"
                               TextColor="#64748B"/>
                        <Label x:Name="UserIdLabel"
                               FontSize="14"
                               TextColor="#64748B"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>

            <Button Text="Logout"
                    Clicked="LogoutClicked"
                    BackgroundColor="#EF4444"
                    TextColor="White"
                    FontSize="16"
                    Padding="14"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HorizontalOptions="Fill"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
