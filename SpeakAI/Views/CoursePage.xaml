<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="SpeakAI.Views.CoursePage"
    BackgroundColor="#F8F9FA">

    <VerticalStackLayout>
        <!-- Header -->
        <Frame BackgroundColor="#34495E"
               Padding="30"
               HasShadow="True"
               CornerRadius="20"
               Margin="10">
            <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="ðŸ“š Course List"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Label Text="Explore a variety of engaging and insightful courses"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Course List -->
        <CollectionView ItemsSource="{Binding Courses}" Margin="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="20"
                           Margin="15"
                           BackgroundColor="White"
                           HasShadow="True"
                           BorderColor="#D6DBDF"
                           CornerRadius="20"
                           Opacity="1.0">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCourseTapped"/>
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="100, *, 50">
                            <!-- Course Image -->
                            <Frame WidthRequest="90" HeightRequest="90"
                                   Padding="0" CornerRadius="15"
                                   Grid.Column="0"
                                   HasShadow="True"
                                   BackgroundColor="White"
                                   BorderColor="#D6DBDF"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center">
                                <Image Source="course_image_02.webp"
                                       Aspect="AspectFill"
                                       HeightRequest="90"
                                       WidthRequest="90"/>
                            </Frame>

                            <!-- Course Details -->
                            <VerticalStackLayout Grid.Column="1" Spacing="8">
                                <Label Text="{Binding CourseName}" 
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#2C3E50" 
                                       LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding Description}" 
                                       FontSize="15"
                                       TextColor="#7D7D7D" 
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>

                                <!-- Points & Levels -->
                                <HorizontalStackLayout Spacing="8">
                                    <Image Source="trophy_icon.png" WidthRequest="20" HeightRequest="20"/>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Points: " FontSize="15" FontAttributes="Bold" TextColor="#FFA500"/>
                                                <Span Text="{Binding MaxPoint}" FontSize="15" FontAttributes="Bold" TextColor="#00BFFF"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </HorizontalStackLayout>

                                <!-- Level Indicators -->
                                <HorizontalStackLayout Spacing="8">
                                    <Frame BackgroundColor="#D4E6F1"
                                           Padding="8"
                                           CornerRadius="10"
                                           HasShadow="False">
                                        <Label Text="A1" 
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#1B4F72"/>
                                    </Frame>
                                    <Frame BackgroundColor="#D1F2EB" 
                                           Padding="8"
                                           CornerRadius="10"
                                           HasShadow="False">
                                        <Label Text="C2"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#0E6251"/>
                                    </Frame>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <!-- Arrow Icon -->
                            <Label Text="âž¡"
                                   FontSize="28"
                                   TextColor="#2C3E50"
                                   BackgroundColor="Transparent"
                                   FontAutoScalingEnabled="True"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Grid.Column="2"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
