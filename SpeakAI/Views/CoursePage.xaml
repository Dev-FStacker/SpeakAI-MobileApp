<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="SpeakAI.Views.CoursePage"
    BackgroundColor="#F8F9FA">

    <VerticalStackLayout>
        <HorizontalStackLayout Padding="20" VerticalOptions="Start">
            <Label Text="Courses" 
                   FontFamily="InterBold"
                   FontSize="24"
                   TextColor="Black"/>
        </HorizontalStackLayout>
        <CollectionView ItemsSource="{Binding Courses}" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15"
                           Margin="15"
                           BackgroundColor="White"
                           HasShadow="True"
                           CornerRadius="20">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCourseTapped"/>
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="80, *, 40" RowDefinitions="Auto, Auto">
                            <Frame WidthRequest="60" HeightRequest="60"
                                   Padding="0"
                                   CornerRadius="10"
                                   Grid.Column="0"
                                   HasShadow="False"
                                   BackgroundColor="White"
                                   BorderColor="#D6DBDF"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center">
                                <Image Source="course_image_02.webp"
                                       Aspect="AspectFill"
                                       HeightRequest="60"
                                       WidthRequest="60"/>
                            </Frame>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="{Binding CourseName}" 
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       FontFamily="InterBold"
                                       TextColor="#2C3E50" 
                                       LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding Description}" 
                                       FontSize="14"
                                       TextColor="#7D7D7D"
                                       FontFamily="Inter"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>

                                <HorizontalStackLayout Spacing="8">
                                    <Image Source="trophy_icon.png" WidthRequest="20" HeightRequest="20"/>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Points: " FontSize="13" FontFamily="Inter" FontAttributes="Bold" TextColor="#FFA500"/>
                                                <Span Text="{Binding MaxPoint}" FontSize="12" FontFamily="Inter" FontAttributes="Bold" TextColor="#00BFFF"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="5">
                                        <Label Text="A1" 
                                               FontSize="12"
                                               Padding="3,2"
                                               FontFamily="Inter"
                                               BackgroundColor="#E5E7EB"
                                               FontAttributes="Bold"
                                               TextColor="Gray"/>
                                        <Label Text="A2"
                                               FontSize="12"
                                               Padding="3,2"
                                               FontFamily="Inter"
                                               BackgroundColor="#E5E7EB"
                                               FontAttributes="Bold"
                                               TextColor="Gray"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            <Label Text="â†’" 
                                   FontSize="32"
                                   TextColor="#2C3E50"
                                   FontAttributes="Bold"
                                   BackgroundColor="Transparent"
                                   Padding="5"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center"
                                   Grid.Column="2">
                            </Label>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
