<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SpeakAI.Views.CoursePage"
             BackgroundColor="#F8F9FA">

    <VerticalStackLayout>
        <Frame BackgroundColor="#1A5276"
               Padding="30"
               HasShadow="False"
               CornerRadius="0">
            <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="ðŸ“š Course List"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Label Text="Explore a variety of engaging and insightful courses"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <CollectionView ItemsSource="{Binding Courses}" Margin="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="20"
                           Margin="15"
                           BackgroundColor="White"
                           HasShadow="True"
                           BorderColor="#D5D8DC"
                           CornerRadius="25"
                           Opacity="1.0"
                           TranslationY="0">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCourseTapped"/>
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="100, *, 50">

                            <Frame WidthRequest="90" HeightRequest="90"
                                   Padding="0" CornerRadius="20"
                                   Grid.Column="0"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center">
                                <Image Source="course_image_02.webp"
                                       Aspect="AspectFill"
                                       HeightRequest="90"
                                       WidthRequest="90"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="8">
                                <Label Text="{Binding CourseName}" 
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#1A5276"
                                       LineBreakMode="TailTruncation"/>

                                <Label Text="{Binding Description}" 
                                       FontSize="15"
                                       TextColor="Gray"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>
                                <HorizontalStackLayout Spacing="12">
                                    <Frame BackgroundColor="#AED6F1" Padding="8"
                                           CornerRadius="10"
                                           HasShadow="False">
                                        <Label Text="A1" 
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#1B4F72"/>
                                    </Frame>
                                    <Frame BackgroundColor="#A3E4D7" Padding="8"
                                           CornerRadius="10"
                                           HasShadow="False">
                                        <Label Text="C2"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#0E6251"/>
                                    </Frame>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <Label Text="âž¡"
                                   FontSize="28"
                                   TextColor="#1A5276"
                                   BackgroundColor="Transparent"
                                   FontAutoScalingEnabled="True"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Grid.Column="2"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
